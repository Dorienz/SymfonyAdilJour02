{% extends 'base.html.twig' %}

{% block body %}


	<div class="example-wrapper">
		<h1>Products</h1>

		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="products">
					{% for product in products %}
						<div class="col">
							<div class="card shadow-sm">
								<img class="bd-placeholder-img" src="https://store.storeimages.cdn-apple.com/4668/as-images.apple.com/is/iphone11-red-select-2019_GEO_EMEA?wid=834&hei=1000&fmt=jpeg&qlt=95&.v=1567021767076" width="100%"/>
								<h3>
									{{product.name | capitalize}}</h3><rect width="100%" height="100%" fill="#55595c"/>

								<div class="card-body">
									<p class="card-text">{{product.description | capitalize}}</p>
									<div class="d-flex justify-content-between align-items-center">
											<div class="btn-group">
											<a href="{{path('products_show', {'id' : product.id})}}">
												<button type="button" class="btn btn-sm btn-outline-secondary">View</button>
											</a>
											<a href="{{path('products_edit', {'id' : product.id})}}">
												<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
											</a>

											<button type="button" data-id="{{product.id}}" class="btn btn-sm btn-danger btn-outline-secondary delete-products">Delete</button>


										</div>
										<small class="text-muted">{{product.price }}â‚¬</small>
									</div>
								</div>
							</div>
						</div>
					{% endfor  %}
				</div>
			</div>
		</div>
		<script src="../../js/main.js"></script>
	{% endblock %}
